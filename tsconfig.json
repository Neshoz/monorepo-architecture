{
  "compilerOptions": {
    "baseUrl": "./packages",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "paths": {
      "@mediatool-poc/ui/*": ["/ui/dist/module/*"],
      "@mediatool-poc/tools/*": ["tools/*"],
      "@mediatool-poc/hub/*": ["hub/*"],
      "@mediatool-poc/core/*": ["core/*"]
    }
  }
}
