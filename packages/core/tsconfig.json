{
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*", "index.tsx"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": ".",
    "types": ["vite/client"],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
  }
}
