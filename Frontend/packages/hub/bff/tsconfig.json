{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "@types"]
}